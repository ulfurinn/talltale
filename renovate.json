{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeAll"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "hexpm/elixir"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "hexpm/elixir"
      ],
      "versioning": "regex:-erlang-(?<major>\\d+)\\.(?<minor>\\d+)(\\.(?<patch>\\d+))?-"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "hexpm/elixir"
      ],
      "versioning": "regex:-alpine-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "alpine"
      ],
      "versioning": "semver"
    }
  ]
}