<div class="controls">
  <input type="hidden" name={@owner.name <> "[block_order][]"} value={@block.index} />
  <.input field={@block["type"]} type="select" options={@block_types} prompt="Type" />
  <.input field={@block["name"]} placeholder="Name" autocomplete="off" phx-debounce="250" />
  <.button field={@block["delete"]} value="true" data-critical>delete</.button>
</div>
